<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/unit_checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:alpha="0"
        android:background="@drawable/outline_selected_chek_units_list" />

    <LinearLayout
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/global_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:letterSpacing="@dimen/letter_spacing"
            android:maxLines="2"
            android:text="Nombre de unidad"
            android:textAllCaps="true"
            android:textColor="@color/black_text"
            android:textScaleX="@dimen/text_scaleX"
            android:textSize="@dimen/text_unit_list" />

        <TextView
            android:id="@+id/unit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_weight="4"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:letterSpacing="@dimen/letter_spacing"
            android:maxLines="1"
            android:text="$1'000.00"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/black_text"
            android:textScaleX="@dimen/text_scaleX"
            android:textSize="@dimen/text_unit_list" />

        <TextView
            android:id="@+id/unit_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="3"
            android:fontFamily="monospace"
            android:letterSpacing="@dimen/letter_spacing"
            android:text="2021/11/05"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/black_text"
            android:textScaleX="@dimen/text_scaleX"
            android:textSize="@dimen/text_unit_list" />

    </LinearLayout>



    </FrameLayout>